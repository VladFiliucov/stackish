<% if @question.errors.present? %>
  <% @question.errors.full_messages.each do |message| %>
    $('#question_errors').html('<%= j message %>')
  <% end %>
<% else %>
  <% if remotipart_submitted? %>
    $('.question-container').html("<%= j "#{render @question}" %>");
    $("#flash").html("<%= j "#{render 'shared/notice_line'}" %>")
  <% else %>
    $('.question-container').html("<%= j render @question %>");
    $("#flash").html("<%= j render 'shared/notice_line' %>")
  <% end %>
<% end %>
